class AnimatedCountdown extends AnimatedWidget {
  final Animation<int> animation;
  final Duration duration;
  final VoidCallback onFinish;

  const AnimatedCountdown({
    Key? key,
    required this.animation,
    required this.duration,
    required this.onFinish,
  }) : super(key: key, listenable: animation);

  @override
  Widget build(BuildContext context) {
    final remainingTime = duration.inSeconds - animation.value;

    // Apply animation to Text opacity and transform
    return AnimatedOpacity(
      opacity: (remainingTime / duration.inSeconds).clamp(0.0, 1.0),
      duration: const Duration(milliseconds: 200),
      child: Transform.translate(
        offset: Offset(0.0, animation.value * 20.0), // Adjust y-axis translation
        child: Text(
          remainingTime.toString(),
          style: TextStyle(
            fontSize: 33.0,
            color: Colors.white,
            fontWeight: FontWeight.bold,
          ),
        ),
      ),
    );
  }
}